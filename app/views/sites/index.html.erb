<p id="notice"><%= notice %></p>

<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.name %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div ng-controller='SiteSearchController as siteSearchCtrl'>
<form>
  <input type='text' ng-model='siteEntry.name'>
</form>

{{siteEntry.name}}

<ul ng-repeat='site in siteSearchCtrl.searchResult.items'>
  <li>{{site.name}}</li>
  <li>{{site.town}}</li>
</ul>

</div>


<br>

<%= link_to 'New Site', new_site_path %>
